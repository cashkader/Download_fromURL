from bs4 import BeautifulSoup
from urllib.request import urlopen
from urllib.parse import urlparse
import os, re, time, pyperclip, pyautogui as pag

os.chdir(r'C:\Users\lstsuser03\Documents\My Python Projects\ITS')
my_url = r'ftp://itsalgo:itSAlgo!2020@datasrv.org/Files/'

links = []
html = urlopen(my_url).read()
html_page = BeautifulSoup(html, features='html.parser') 
html_str = str(html_page)
urls=re.findall(r'[\w\d\-&;\(\),.]+\.pdf', html_str)

pag.hotkey('win', '1')
time.sleep(1)

for url in urls:
    pag.hotkey('ctrl', 'f')
    time.sleep(1)
    pag.typewrite(url)
    time.sleep(1)
    pag.press('enter')
    time.sleep(1)
    pag.hotkey('ctrl', 'enter')
    time.sleep(5)
